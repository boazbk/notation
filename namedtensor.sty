\RequirePackage{amssymb}

\newcommand{\name}[1]{\ensuremath{\mathsf{#1}}}
\newcommand{\nidx}[2]{\ensuremath{\name{#1}(#2)}}
\newcommand{\nset}[2]{\ensuremath{\name{#1}[#2]}}
\newcommand{\nbin}[2]{\mathbin{\mathop{#2}\limits_{\name{#1}}}}
\newcommand{\ndot}[1]{\nbin{#1}{\boldsymbol\cdot}}
\newcommand{\ncat}[1]{\nbin{#1}{\oplus}}
\newcommand{\nsum}[1]{\sum\limits_{\name{#1}}}
\newcommand{\nfun}[2]{\mathop{\mathop{\mathrm{#2}}\limits_{\name{#1}}}}
\newcommand{\nmov}[3]{\left[#3\right]_{\name{#1}\rightarrow\name{#2}}}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Boaz's commands
% define a new axis, right now if we do \newaxis{ax} then \ax becomes a command for \name{ax}
% when I get the time, I want to add an optional argument that allows to use a different name
% for the command and the displayed name (in case there is a command we don't want to clobber)
\newcommand{\newaxis}[1]{\expandafter\def \csname #1\endcsname{\name{#1}}}


% commands dropping the \name - useful for annotated axis or more than one axis
\newcommand{\abin}[2]{\mathbin{\mathop{#2}\limits_{#1}}} 
\newcommand{\adot}[1]{\nbin{#1}{\boldsymbol\cdot}}
\newcommand{\afun}[2]{\mathop{\mathop{\mathrm{#2}}\limits_{#1}}}
\newcommand{\asum}[1]{\sum\limits_{#1}}

